{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "docker:pinDigests"],
  "packageRules": [
    {
      "matchFileNames": [".github/workflows/**"],
      "pinDigests": false
    },
    {
      "description": "Automerge some GitHub Actions",
      "matchFileNames": [".github/workflows/**"],
      "matchManagers": ["github-actions"],
      "automerge": true,
      "automergeType": "pr"
    }
  ]
}
